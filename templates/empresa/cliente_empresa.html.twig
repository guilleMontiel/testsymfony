{% extends 'base.html.twig' %}
{% block title %}Empresa{% endblock %}

{% block main %}
{{ parent() }}

<div class="row-fluid">
    <div class="col-sm-12 mb-3">
        <div class="card">
            <div class="card-header"><h2><i class="fa fa-list-alt"></i> Empresas Asociadas</h2></div>
        </div>
    </div>
    <div class="col-sm-12">
        <nav aria-label="breadcrumb mb-2">
           <ol class="breadcrumb">
               <li class="breadcrumb-item"><a href="{{ path('dashboard') }}"><i class="fa fa-home"></i> Home</a></li>
             <li class="breadcrumb-item active">Empresas</li>
           </ol>
       </nav>
    </div>
    {% if is_granted('ROLE_ADMIN') %}
    <div class="col-sm-12 mb-3">
        <a href="{{ path('new_empresa') }}" class="btn btn-info"><i class="fa fa-plus-circle"></i> Nuevo registro</a>
    </div>
    {% endif %}
    
    <div class="col-sm-12">
         {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                <b><i class="fas fa-check-circle"></i> {{ message }}</b>
            </div>
        {% endfor %}
    </div>
    
    <div class="col-sm-12">
        <table id="empresas" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>NOMBRE</th>
                    <th>TELEFONO</th>
                    <th>EMAIL</th>
                    <th>SECTOR</th>
                </tr>
            </thead>
            <tbody>
                {% for empresa in empresas %}
                <tr>
                    <td>{{ empresa.id }}</td>
                    <td>{{ empresa.nombre }}</td>
                    <td>{{ empresa.telefono }}</td>
                    <td>{{ empresa.email }}</td>
                    <td>{{ empresa.sector.nombre }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        
    </div>
</div>
{% endblock %}


