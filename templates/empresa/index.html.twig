{% extends 'base.html.twig' %}
{% block title %}Empresa{% endblock %}

{% block main %}
{{ parent() }}
<div class="row-fluid">
    <div class="col-sm-12 mb-3">
        <div class="card">
            <div class="card-header"><h2><i class="fa fa-list-alt"></i> Lista de empresas</h2></div>
        </div>
    </div>
    <div class="col-sm-12 mb-3">
        <a href="#" class="btn btn-info">Nuevo registro</a>
    </div>
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>NOMBRE</th>
                            <th>TELEFONO</th>
                            <th>EMAIL</th>
                            <th>SECTOR</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for empresa in empresas %}
                        <tr>
                            <td>{{ empresa.id }}</td>
                            <td>{{ empresa.nombre }}</td>
                            <td>{{ empresa.telefono }}</td>
                            <td>{{ empresa.sector }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}


