{% extends 'base.html.twig' %}
{% block title %}Empresa{% endblock %}

{% block main %}
{{ parent() }}


<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body"><h3>Fixer io RestApi</h3></div>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <label>Moneda de Origen</label>
                        <select class="form-control" id="moneda_origen">
                            <option value="">Seleccionar..</option>
                            {% for moneda,descripcion in monedas.symbols %}
                                <option value="{{ moneda }}">{{ moneda }} - {{ descripcion }} </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Moneda de Destino</label>
                        <select class="form-control" id="moneda_destino">
                            <option value="">Seleccionar..</option>
                            {% for moneda,descripcion in monedas.symbols %}
                                <option value="{{ moneda }}">{{ moneda }} - {{ descripcion }} </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Importe Original</label>
                        <input type="number" class="form-control" id="importe_original">
                    </div>
                    <div class="form-group">
                        <label>Fecha</label>
                        <input type="date" class="form-control" id="fecha">
                    </div>
                    <button id="convertir" data-url="{{ path('moneda_convertir') }}" type="button" class="btn btn-sm btn-success">Consultar</button>
                    <div class="mt-3">
                        <strong id="consultado" class="text-success" style="display: none;"><i class="fa fa-spin fa-spinner"></i> Consultando a la api...</strong>
                    </div>
                </form>
            </div>
        </div>
        
    </div>
</div>
{{ encore_entry_script_tags('monedajs') }}
{% endblock %}


