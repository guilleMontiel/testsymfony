{% extends 'base.html.twig' %}
{% block title %}Empresa{% endblock %}

{% block main %}
{{ parent() }}

<div class="row-fluid">
    <div class="col-sm-12 mb-3">
        <div class="card">
            <div class="card-header"><h2><i class="fa fa-list"></i> Sectores Asociados</h2></div>
        </div>
    </div>
    <div class="col-sm-12">
        <nav aria-label="breadcrumb mb-2">
           <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('dashboard') }}"><i class="fa fa-home"></i> Home</a></li>
                <li class="breadcrumb-item active">Sectores</li>
           </ol>
       </nav>
    </div>    
    <div class="col-sm-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>NOMBRE</th>
                </tr>
            </thead>
            <tbody>
                {% for sector in sectores %}
                <tr>
                    <td>{{ sector.id }}</td>
                    <td>{{ sector.nombre }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    
    </div>
</div>
{% endblock %}


